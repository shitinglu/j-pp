{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2015",
    /* es2015 commonjs ç­‰ */
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "noImplicitAny":false,
    "outDir": "./",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
